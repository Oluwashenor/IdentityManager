@model ResetPasswordViewModel

<h1 class="text-info">Reset Password</h1>

<form asp-controller="Account" asp-action="ResetPassword" method="post" role="form">
    <h4>Reset your password</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger">
        <input asp-for="Code" hidden/>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-group">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-2"></label>
        <div class="col-md-10">
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">

        <div class="col-md-2">
            <button type="submit" class="btn btn-success form-control">Reset</button>
        </div>
    </div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}